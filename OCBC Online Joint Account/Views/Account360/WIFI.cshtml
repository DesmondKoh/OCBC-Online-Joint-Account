@model OCBC_Joint_Account_Application.Models.Account360ViewModel

@{ ViewData["Title"] = "WIFI"; }

<meta http-equiv="Refresh" content="1.5">



<div class="container-fluid denied" style="margin-top: -60px; padding-bottom: -600px;">
    @ViewData["A"]
    <div class="page-margin" style="margin: 0 20% 0 20%; text-align: center;">
        <div class="row">
            <div class="col-md-4">
                <lottie-player class="lottie-image" src="https://assets4.lottiefiles.com/packages/lf20_suvqt7by.json" mode="bounce" background="transparent" speed="1" style="width: 400px; height: 400px; margin-top: 120px; margin-left: -60px;" autoplay></lottie-player>
            </div>
            <div class="col-md-8">
                <div style="margin: 200px 0 0 100px;">
                    <div style="margin: 100px 0px 15px; text-align: left;">
                        <h1 style="font-size: 32px; font-weight: bold;">LOOKING FOR APPLICANT...</h1>
                    </div>
                    <div style="text-align: left;">
                        <h2 style="font-size: 25px; font-weight: normal;">
                            Please wait for first applicant to complete
                            the application
                        </h2>
                    </div>
                    <div style="text-align: left; margin-top: 50px;">
                        <h1 style="font-size: 22px; font-weight: lighter;">
                        </h1>
                    </div>
                    <form>
                        <div style="margin-top: 60px; text-align: left; z-index: 0; position: relative;">
                            <input class="resend" type="submit" value="Close" asp-controller="Home" asp-action="Index">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
